{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es5",
      "module": "es2015",
      "noImplicitAny": false,
      "noImplicitThis": false,
      "lib": [
        "es2015",
        "es2016",
        "es2017",
        "dom"
      ],
      "strict": true,
      "sourceMap": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,  // 允许 default的使用方式
      "experimentalDecorators": true,  // 准许注解
      "emitDecoratorMetadata": true,
      "declarationDir": "dist/types",
      "outDir": "dist/es",
      "typeRoots": [
        "node_modules/@types",
        "@types"
      ]
    },
    "include": [
      "src"
    ]
  }